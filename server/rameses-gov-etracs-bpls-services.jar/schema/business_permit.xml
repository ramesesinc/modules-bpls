
<schema adapter="bplsdb">
	<element tablename="business_permit">
		<field name="objid" primary="true" prefix="BPERM"/>
		<field name="permitno" required="true" />

		<!-- this is the application that caused the permit to be created -->
		<field name="appid" required="true" />

		<field name="appid" required="true" />
		<field name="dtissued" required="true" />
		<field name="dtcreated" required="true" />
		<field name="issuedby_objid"  />
		<field name="issuedby_name"  />
		<field name="permittype"  />
		<field name="expirydate" required="true" />
		<field name="remarks" />

		<complex name="lobs" ref="business_permit_lob" jointype="one-to-many">
			<key field="objid" target="permitid" />
		</complex>	
	</element>
</schema>