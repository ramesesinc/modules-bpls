<!--
Notes:
The bin links it to the business_account. 
This table is created once per year via NEW or RENEW applications.
This represents the current and last view of the business for a particular year.   
The appid will be immutable, i.e. once it is created it can never be changed.
The generalinfoid is not immutable. This will change if there are changes in the general info. 
-->
<schema adapter="bplsdb">
	<element tablename="business_year">
		<field name="objid" primary="true" prefix="BUSYR"/>
		<field name="year" required="true"/>
		<field name="businessacctid" required="true"/>

		<field name="appid" updatable="false"/>
		<field name="geninfoid" required="true"/>
		<!-- this is copied from previous -->
		<field name="monthlyrent"/>
		<field name="permitid"/>
		<field name="renewaldate" type="date"/>
	</element>
</schema>