<!--
DROP VIEW IF EXISTS vw_business_ob;
CREATE VIEW vw_business_lob AS  
SELECT 
  bl.*,
  lob.name AS lob_name,
  lob.psic_objid AS lob_psic_objid,
  lob.classification_objid AS lob_classification_objid,
  CASE WHEN br.objid IS NULL THEN 0 ELSE 1 END AS retired  
FROM business_lob bl
INNER JOIN lob ON bl.lobid = lob.objid
LEFT JOIN business_lob_retired br ON bl.objid=br.businesslobid;
-->
<schema adapter="bplsdb">
	<element tablename="vw_business_lob">
		<field name="objid" primary="true"/>
		<field name="businessid" required="true"/>
		<field name="appid" />
		<field name="lobid" required="true"/>
		<field name="assessmenttype" required="true"/>
		<field name="particulars" />
		<field name="lob_name" />
		<field name="lob_classification_objid" />
		<field name="lob_psic_objid" />
		<field name="retired" />
	</element>
</schema>