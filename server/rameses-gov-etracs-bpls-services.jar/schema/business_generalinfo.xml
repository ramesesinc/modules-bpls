<!--
Notes:
This table represents the general info for a business.
If there is any change in any of the fields, a new record will be created
except for typo errors. 
-->
<schema adapter="bplsdb">
	<element tablename="business_generalinfo">
		<field name="objid" primary="true" prefix="BUSGENINFO"/>
		<field name="businessacctid" required="true" updatable="false"/>
		<field name="orgtype" required="true"/>
		<field name="tradename" required="true"/>

		<field name="owner_objid" required="true"/>
		<field name="owner_name" required="true" searchable="true" indexed="true" caption="Owner Name"/>
		<field name="owner_address_objid" required="true"/>
		<field name="owner_address_text" required="true"/>

		<field name="address_type" required="true"/>
		<field name="address_text" required="true" caption="Address"/>

		<field name="address_bldgno" />
		<field name="address_unitno" />
		<field name="address_bldgname" />
		<field name="address_street" />
		<field name="address_subdivision" />
		<field name="address_barangay_objid" />
		<field name="address_barangay_name" />
		<field name="address_city" />
		<field name="address_province" />
		<field name="address_municipality" />
		<field name="address_pin"/>

		<field name="lessor_objid" />
		<field name="lessor_name"/>
		<field name="lessor_address_text"/>
		<field name="lessor_address_objid"/>
		<field name="rentedaddressid" />	
		<field name="ownedaddressid" />	

		<!-- transaction id that effected the change -->
		<field name="refid" />	
		<field name="mobileno" />
		<field name="phoneno" />
		<field name="email" />

	</element>
</schema>