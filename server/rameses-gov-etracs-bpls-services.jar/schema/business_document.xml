<schema adapter="bplsdb">
	<element tablename="business_document">
		<field name="objid" primary="true" prefix="BUSDOC"/>
		<field name="docno" required="true"/>
		<field name="doctype" required="true"/>
		<field name="dtissued" required="true"/>
		<field name="particulars" required="true"/>
		<field name="placeissued" required="true"/>
		<field name="owner_objid" required="true"/>
		<field name="owner_name" required="true"/>
		<field name="expirydate" required="true"/>

		<!-- link to uploaded file if any -->
		<field name="fileid" />
	</element>
</schema>