<schema adapter="bplsdb">
	<element tablename="businessvariable">
		<field name="objid" primary="true"/>
		<field name="state" required="true"/>
		<field name="name" required="true" searchable="true" indexed="true"/>
		<field name="datatype" required="true"/>
		<field name="caption" required="true" searchable="true"/>
		<field name="description"/>
		<field name="system" required="true"/>
		<complex name="arrayvalues" serializer="default"/>
		<field name="sortorder" required="true"/>
		<field name="category" indexed="true" />
		<field name="handler" />
	</element>
</schema>