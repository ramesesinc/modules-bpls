<script>
	\$put( "askbin", new function() {

		var self = this;
		this.refno;

		var app = \$get("billing").code;

		this.search = function() {
			app.loadBill( {refno: this.refno}, function() {
				window.location.hash = WindowUtil.buildHash( "viewbill", {refno:self.refno} );
			});
		}


	})
</script>



<div style="padding-top:0px;">
  <div class="row">
      <div class="col-md-12">
        <div class="row">
          <div class="col-md-4">
            <div class="control-group">
                <label class="control-label">Specify Business Application No.</label>
                
                  <div class="form-group">
                    <div class="input-group">
                      <input type="text" r:context="askbin" r:name="refno" class="form-control input-response" required/>

                      <span class="input-group-btn">
						<input type="button" value="Submit" r:context="askbin" r:name="search" 
                        	   class="btn-response btn btn-submit btn-primary" />
                      </span>
                    </div>
                  </div>
              </div> 
          </div>
        </div>
      </div>
  </div>
</div>
