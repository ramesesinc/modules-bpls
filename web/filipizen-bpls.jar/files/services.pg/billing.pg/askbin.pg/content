<script>
	\$put( "askbin", new function() {

		var self = this;
		this.refno;

		var app = \$get("billing").code;

		this.search = function() {
			app.loadBill( {refno: this.refno}, function() {
				window.location.hash = WindowUtil.buildHash( "viewbill", {refno:self.refno} );
			});
		}

	})
</script>

<div class="form">
  @wx:text(caption:'Enter BIN or Application No', context:'askbin', name:'refno', captionClass:'+w250')
</div>
@wx:button( caption:'Submit', context:'askbin', name:'search')
